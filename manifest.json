{
  "manifest_version": 3,
  "name": "Better AI Studio",
  "version": "2.0.0",
  "description": "Automatically apply your favorite AI studio settings, and avoid manual setup for each chat.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://aistudio.google.com/*"
      ],
      "js": [
        "config.js",
        "scripts/content.js"
      ],
      "css": [
        "styles/injected.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "styles/theme.css"
      ],
      "matches": [
        "https://aistudio.google.com/*"
      ]
    }
  ]
}